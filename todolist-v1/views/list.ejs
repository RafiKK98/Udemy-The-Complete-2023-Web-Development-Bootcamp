<%- include('header') -%>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    <div class="box">
        <% for( let i = 0; i < newListItems.length; i++ ) { %>
        <div class="item">
            <input type="checkbox" name="" id="" />
            <p><%= newListItems[i] %></p>
        </div>
        <% } %>
    </div>
    <div class="box">
        <form class="item" action="/" method="post">
            <input
            type="text"
            name="newItem"
            id=""
            placeholder="New Item"
            required
            autocomplete="off"
            />
            <button type="submit" name="list" id="plus-button" value="<%= listTitle %>">
            +
            </button>
        </form>
    </div>
<%- include('footer') -%>